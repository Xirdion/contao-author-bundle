{
    "name": "xirdion/contao-author-bundle",
    "description": "Show additional author information on a reader page",
    "type": "contao-bundle",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Xirdion",
            "homepage": "https://github.com/xirdion"
        }
    ],
    "support": {
        "issues": "https://github.com/sowieso-web/contao-author-bundle/issues",
        "source": "https://github.com/sowieso-web/contao-author-bundle"
    },
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "contao/calendar-bundle": "^4.9",
        "contao/core-bundle": "^4.9",
        "contao/faq-bundle": "^4.9",
        "contao/news-bundle": "^4.9"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "contao/manager-plugin": "^2.0",
        "contao/test-case": "^4.4",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true
        }
    },
    "extra": {
        "contao-manager-plugin": "Sowieso\\ContaoAuthorBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Sowieso\\ContaoAuthorBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sowieso\\ContaoAuthorBundle\\Tests\\": "tests"
        }
    }
}
